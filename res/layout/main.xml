<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" >
    <Button
        android:id="@+id/get_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get account" />
    <Button
        android:id="@+id/delete_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delete password" />
    <Button
        android:id="@+id/delete_token"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delete token" />
    <Button
        android:id="@+id/get_token"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get token" />
</LinearLayout>

